#include<stdio.h>
int main()
{
    int year;
    printf("Enter Current Year : ");
    scanf("%d",&year);
    if(year%400==0)
    {
        printf("%d is a Leap Year\n",year);
    }
    if(year%100==0 &&year%400!=0)
    {
        printf("%d is not a Leap Year\n",year); 
    }
    if(year%4==0 &&year%100!=0)
    {
        printf("%d is a Leap Year\n",year);
    }
    if(year%4!=0)
    {
        printf("%d is not a Leap Year");
    }
    return 0;

}
